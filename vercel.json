{
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "functions": {
        "api/index.ts": {
            "includeFiles": "shared/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}