{
    "functions": {
        "api/index.ts": {
            "includeFiles": [
                "shared/**",
                "server/**"
            ]
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}